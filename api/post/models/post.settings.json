{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Slug": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "User": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "comments": {
      "via": "post",
      "collection": "comment"
    }
  }
}
